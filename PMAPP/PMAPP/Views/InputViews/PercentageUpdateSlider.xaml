<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMAPP.Views.InputViews.PercentageUpdateSlider">
  <ContentView.Content>
        <StackLayout
            Padding="10"
            BackgroundColor="White"
            HorizontalOptions="CenterAndExpand"
            Spacing="5"
            HeightRequest="300"
            VerticalOptions="CenterAndExpand"
            WidthRequest="200">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <Label x:Name="pName" 
                       Grid.Row="0"
                       Margin="0,0,0,0"
                       HorizontalTextAlignment="Center" 
                       VerticalTextAlignment="Center" 
                       FontFamily="DroidKufi-Bold.ttf#DroidKufi-Bold"
                        TextColor="Black"
                        FontSize="12"/>
                <Label Text="اجمالي العدد" 
                       Grid.Row="1"
                       HorizontalTextAlignment="Center" 
                       VerticalTextAlignment="Center" 
                       FontFamily="DroidKufi-Regular.ttf#DroidKufi-Regular"
                        TextColor="Black"
                        FontSize="12"/>
                <Label x:Name="totalAmmount" 
                       Grid.Row="2"
                       HorizontalTextAlignment="Center" 
                       VerticalTextAlignment="Center" 
                       FontFamily="DroidKufi-Bold.ttf#DroidKufi-Bold"
                        TextColor="Black"
                        FontSize="12"/>
                <Label Text="تم الانجاز" 
                       Grid.Row="3"
                       HorizontalTextAlignment="Center" 
                       VerticalTextAlignment="Center" 
                       FontFamily="DroidKufi-Regular.ttf#DroidKufi-Regular"
                        TextColor="Black"
                        FontSize="12"/>
                <Label x:Name="doneAmmount" 
                       Grid.Row="4"
                       HorizontalTextAlignment="Center" 
                       VerticalTextAlignment="Center" 
                       FontFamily="DroidKufi-Bold.ttf#DroidKufi-Bold"
                        TextColor="Black"
                        FontSize="12"/>

                <Label x:Name="InputSliderValueLabel"
                        FontSize="Medium"
                        Grid.Row="5"
                        HorizontalOptions="CenterAndExpand"
                        HorizontalTextAlignment="Center"
                        Text="[ slide to set a value ]" />
                
                <Slider x:Name="InputSlider"
                        Maximum="100"
                       Grid.Row="6"
                        Minimum="0" />

