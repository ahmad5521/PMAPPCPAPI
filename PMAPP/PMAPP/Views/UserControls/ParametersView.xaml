                                                AbsoluteLayout.LayoutBounds=".5,.5,1,1"
                                                AbsoluteLayout.LayoutFlags="All"                                  
                                               ViewBoxHeight="70" 
                                               TextColor="#47525e" />-->
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>