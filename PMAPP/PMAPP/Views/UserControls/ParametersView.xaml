                                                        <Label x:Name="woldata"  Text="{Binding Lenght}"
                                                   FontFamily="DroidKufi-Regular.ttf#DroidKufi-Regular"
                                                   IsVisible="True"
                                                   TextColor="Black"
                                                   FontSize="10"
                                                   Opacity="0.6"
                                                   HorizontalTextAlignment="End"/>
