                                                   Opacity="0.6"/>
                                                    </StackLayout>
                                                    <StackLayout Orientation="Horizontal"
                                                         Grid.Column="0"
                                                         Margin="5,3,10,3"
                                                         HorizontalOptions="Start">
                                                        <Label x:Name="isDonelbl"  
                                                   IsVisible="{Binding isDone}"
                                                   TextColor="Black"
                                                   FontSize="10"
                                                   Opacity="0.6"
                                                   Text="تم الانجاز"
                                                   FontFamily="DroidKufi-Bold.ttf#DroidKufi-Bold"
                                                   HorizontalOptions="Start"/>
