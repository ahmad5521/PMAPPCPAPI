@model IEnumerable<PMCPV2.Models.WorkOrdersParameter>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row border-bottom white-bg dashboard-header">
    <p>
        @Html.ActionLink("Create New", "Create")| @Html.ActionLink("Back ", "../Manage")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Parameter.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkOrder.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lenght)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isDone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastUpdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoneLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoneAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.weightAmount)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Parameter.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkOrder.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lenght)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isDone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastUpdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoneLength)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoneAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.weightAmount)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>